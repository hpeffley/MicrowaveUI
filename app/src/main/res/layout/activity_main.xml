<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.dtcc.hpeffley.cis282microwavelab.MainActivity">

    <Button
        android:text="STOP"
        android:id="@+id/btnStop"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnNine"
        android:layout_alignTop="@+id/btnCook" />

    <Button
        android:text="0"
        android:id="@+id/btnZero"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnCook" />

    <Button
        android:text="9"
        android:id="@+id/btnNine"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnStop"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cook"
        android:id="@+id/btnCook"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnFive"
        android:layout_below="@+id/btnEight"
        android:layout_toStartOf="@+id/btnStop" />

    <Button
        android:text="8"
        android:id="@+id/btnEight"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnZero"
        android:layout_alignStart="@+id/btnCook" />

    <Button
        android:text="7"
        android:id="@+id/btnSeven"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnZero"
        android:layout_alignStart="@+id/btnZero" />

    <Button
        android:text="6"
        android:id="@+id/btnSix"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnNine"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="5"
        android:id="@+id/btnFive"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnEight"
        android:layout_toStartOf="@+id/btnSix" />

    <Button
        android:text="4"
        android:id="@+id/btnFour"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnSeven"
        android:layout_alignStart="@+id/btnSeven" />

    <Button
        android:text="1"
        android:id="@+id/btnOne"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnFive"
        android:layout_alignStart="@+id/btnFour" />

    <Button
        android:text="2"
        android:id="@+id/btnTwo"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnSix"
        android:layout_toEndOf="@+id/btnFour" />

    <Button
        android:text="3"
        android:id="@+id/btnThree"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_above="@+id/btnSix"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="100dp"
        android:id="@+id/tvCookTime"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:background="@android:drawable/edit_text"
        android:layout_width="200dp" />

    <TextView
        android:text="COOK TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/tvCookTime"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:id="@+id/tvFoodDone"
        android:textAlignment="center"
        android:textSize="60sp"
        android:layout_alignTop="@+id/btnOne"
        android:layout_alignParentStart="true" />

</RelativeLayout>
